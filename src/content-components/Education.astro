---
import Tab from "../components/Tab.astro";
---

<div class="education">
  <div class="timeline">
    <div class="timeline-item"></div>
    <div class="timeline-item"></div>
    <div class="timeline-item"></div>
    <div class="hide"></div>
  </div>

  <Tab>
    <div slot="selects" class="selects items">
      <div class="item" id="item1">
        <div class="image">
          <img
            src="/university-portfolio/icons/rnk.png"
            alt="โรงเรียนราชวินิตประถมบางแค"
            loading="lazy"
          />
        </div>

        <div class="detail">
          <h3>อนุบาล - ประถมศึกษา</h3>
          <p>โรงเรียนราชวินิตประถมบางแค</p>
          <p>ประถม <span>GPAX: 3.90</span></p>
        </div>
      </div>

      <div class="item" id="item2">
        <div class="image">
          <img
            src="/university-portfolio/icons/debsirin.png"
            alt="โรงเรียนเทพศิรินทร์"
            loading="lazy"
          />
        </div>
        <div class="detail">
          <h3>มัธยมศึกษาตอนต้น</h3>
          <p>โรงเรียนเทพศิรินทร์</p>
          <p><span>GPAX: 4.00</span></p>
        </div>
      </div>

      <div class="item" id="item3">
        <div class="image">
          <img
            src="/university-portfolio/icons/debsirin.png"
            alt="โรงเรียนเทพศิรินทร์"
            loading="lazy"
          />
        </div>
        <div class="detail">
          <h3>มัธยมศึกษาตอนปลาย</h3>
          <p>โรงเรียนเทพศิรินทร์</p>
          <p><span>GPAX: 4.00</span> (5 ภาคเรียน)</p>
        </div>
      </div>
    </div>

    <div slot="contents" class="contents">
      {
        [1, 2, 3].map((number) => (
          <img
            src={`/university-portfolio/images/education/${number}.webp`}
            alt="education-picture"
            loading="lazy"
          />
        ))
      }
    </div>
  </Tab>
</div>

<style>
  * {
    --dot-wh: min(1.5rem, 5vw);
    --img-wh: min(9rem, 15vw);
    --tl-height: min(26rem, calc(27vw + 12rem));
  }

  .education {
    display: flex;
    justify-content: center;
    gap: min(10rem, 2vw);
    position: relative;
  }

  .timeline {
    display: none;
    margin-top: calc(var(--img-wh) / 2 + var(--dot-wh) / 2);
  }

  .timeline .timeline-item {
    width: var(--dot-wh);
    height: var(--dot-wh);
    background-color: white;
    border-radius: 50%;
  }

  .timeline .hide {
    position: absolute;
    top: var(--tl-height);
    bottom: 0;
    left: -0.75rem;
    right: -0.75rem;
    opacity: 1;
    background-color: rgb(var(--dark));
  }

  .items .item {
    display: flex;
    align-items: center;
    justify-content: start;
    margin-bottom: 2rem;

    cursor: pointer;
    padding: 1rem 3vw;
    border-radius: 0.4rem;
    transition: background-color 0.25s;
  }

  .items :last-child {
    margin-bottom: 0rem;
  }

  .items .item .detail h3 {
    color: rgb(var(--primary));
    font-size: clamp(1rem, 2vw, 2rem);
    width: max-content;
  }

  .items .item .detail h3::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2.5px;

    transform: scaleX(0);
    background-color: rgb(var(--primary));

    transform-origin: bottom right;
    transition: transform 0.25s ease-out;
  }

  .items .item:hover .detail h3::after,
  .items .item.active .detail h3::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .items .item .detail p span {
    font-weight: 700;
  }

  .items .item .image {
    width: var(--img-wh);
    height: var(--img-wh);
    background-color: white;
    border-radius: 50%;

    display: flex;
    align-items: center;
    justify-content: center;

    margin-right: min(2rem, 4vw);
  }

  .items .item .image img {
    display: block;
    width: 90%;
    object-fit: cover;
  }

  .contents img {
    display: block;
    width: 100%;
    margin: auto;
    margin-top: 2rem;
    object-fit: cover;
  }

  @media only screen and (min-width: 370px) {
    .timeline {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;

      width: 0.3rem;
      height: var(--tl-height);
      background-color: white;
      border-radius: 100rem;
    }

    .contents img {
      width: calc(30vw + 10rem);
    }
  }
</style>

<script>
  import { gsapTrigger } from "../scripts/gsapTrigger";
  import { initTab } from "../scripts/tab";

  gsapTrigger.from(".education .item", ".education .item", {
    opacity: 0,
    x: 500,
    stagger: 0.4,
    delay: 0.25,
    ease: "power4",
    duration: 1.5,
  });

  gsapTrigger.from(".education .hide", ".education .hide", {
    opacity: 1,
    top: 0,
    delay: 0.5,
    ease: "power4",
    duration: 3,
  });

  initTab(document.querySelector(".education .tab") as Element, 2);
</script>
